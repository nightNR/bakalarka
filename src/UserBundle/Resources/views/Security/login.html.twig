{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
        <h1>Login to Your Account</h1>
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

            <div class="form-group">
                <div class="col-sm-12">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                           placeholder="{{ 'security.login.username'|trans }}"
                           class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <input type="password" id="password" name="_password" required="required" class="form-control"
                           placeholder="{{ 'security.login.password'|trans }}"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <div class="checkbox">
                        <label for="remember_me">
                            <input type="checkbox" id="remember_me" name="_remember_me"
                                   value="on"/>{{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            {% if error %}
                <div class="alert alert-danger col-sm-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                           class="btn btn-primary btn-block"/>
                </div>
            </div>
        </form>
        <div><a href="{{ path('fos_user_registration_register') }}">Register</a> / <a href="{{ path('fos_user_resetting_request') }}">Lost password</a></div>
{% endblock fos_user_content %}
