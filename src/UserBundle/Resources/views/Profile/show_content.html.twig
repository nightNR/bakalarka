{% trans_default_domain 'PubLeashBundle' %}

<div class="fos_user_user_show">
    <div class="row">
        <div class="col-xs-6 col-md-3">
            <a href="#" class="thumbnail">
                <img src="{{ gravatar(app.user.email, 160, 'g') }}" alt="...">
            </a>
            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary btn-block">{{ 'user.edit_profile'|trans }}</a>
        </div>
        <div class="col-xs-6 col-md-9">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="page-header">
                        <h1>{{ user.username }}</h1>
                    </div>
                    <div class="col-xs-2 col-md-3">
                        <div class="row text-right">
                            <strong>{{ 'user.email'|trans }}:</strong>
                        </div>
                        <div class="row text-right">
                            <strong>{{ 'user.name'|trans }}:</strong>
                        </div>
                        <div class="row text-right">
                            <strong>{{ 'user.surname'|trans }}:</strong>
                        </div>
                        <div class="row text-right">
                            <strong>{{ 'user.address'|trans }}:</strong>
                        </div>
                        <div class="row text-right">
                            <strong>{{ 'user.city'|trans }}:</strong>
                        </div>
                        <div class="row text-right">
                            <strong>{{ 'user.country'|trans }}:</strong>
                        </div>
                    </div>
                    <div class="col-xs-4 col-md-6">
                        <div class="row text-left">
                            {{ user.email }}
                        </div>
                        <div class="row text-left">
                            {{ user.firstName }}
                        </div>
                        <div class="row text-left">
                            {{ user.lastName }}
                        </div>
                        <div class="row text-left">
                            {{ user.address }}
                        </div>
                        <div class="row text-left">
                            {{ user.city }}
                        </div>
                        <div class="row text-left">
                            {{ user.country }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    {#{{ dump(user) }}#}
</div>
